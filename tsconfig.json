{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@mytheme/*": ["mytheme/*"],
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"],
      "@store/*": ["store/*"],
      "@api/*": ["api/*"],
      "@hooks/*": ["hooks/*"],
    }
  },
  "include": ["src", "declaration.d.ts", "webpack.config.js"]
}
